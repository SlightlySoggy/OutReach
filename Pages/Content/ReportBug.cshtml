@page "/ReportBug"
@model Outreach.Pages.Content.ReportBugModel
@{
    Layout = "../Shared/_Layout_Landing.cshtml";
    ViewData["Title"] = "Contact page";
}



<!-- Content Wrapper. Contains page content -->
<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Report Bug</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-page="/HomePages/index">Home</a></li>
                        <li class="breadcrumb-item active">Report Bug</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">

            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="row gy-4">
                            <div class="col-md-4 wow fadeIn" data-wow-delay="0.1s">
                                <div class="d-flex align-items-center bg-light rounded p-4">
                                    <div class="bg-white border rounded d-flex flex-shrink-0 align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa fa-map-marker-alt text-primary"></i>
                                    </div>
                                    <span>Edmonton AB Canada</span>
                                </div>
                            </div>
                            <div class="col-md-4 wow fadeIn" data-wow-delay="0.3s">
                                <div class="d-flex align-items-center bg-light rounded p-4">
                                    <div class="bg-white border rounded d-flex flex-shrink-0 align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa fa-envelope-open text-primary"></i>
                                    </div>
                                    <span>maxwellhuodali@gmail.com</span>
                                </div>
                            </div>
                            <div class="col-md-4 wow fadeIn" data-wow-delay="0.5s">
                                <div class="d-flex align-items-center bg-light rounded p-4">
                                    <div class="bg-white border rounded d-flex flex-shrink-0 align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa fa-phone-alt text-primary"></i>
                                    </div>
                                    <span>825 439 4080</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="wow fadeInUp" data-wow-delay="0.5s">
                            <h1 class="mb-4">Report Bug</h1>
                            <form method="post" enctype="multipart/form-data">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="name" placeholder="Your Name" aria-required="true" name="inputName" value="@Model.BugInfo.Name">
                                            <label for="name">Your Name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="name" placeholder="Your Email" aria-required="true" name="inputEmail" value="@Model.BugInfo.Email">
                                            <label for="email">Your Email</label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="name" placeholder="Subject" aria-required="true" name="inputSubject" value="@Model.BugInfo.Subject">
                                            <label for="subject">Subject</label>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="form-floating btn-file">
                                            <i class="fas fa-paperclip"></i> Image of Issue
                                            <input type="file" name="postedFile"/>
                                        </div>
@*                                        <p class="help-block">If available</p>*@
                                    </div>

                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" placeholder="Leave a message here" id="message" style="height: 150px" aria-required="true" name="inputMessage">@Model.BugInfo.Message</textarea>
                                            <label for="message">Message</label>
                                        </div>
                                    </div>

                                    <input type="hidden" class="form-control" placeholder="" name="hidUserId" value="@Model.user_id">
                                    <input type="hidden" class="form-control" placeholder="" name="hidBugId" value="@Model.BugInfo.Id">

                                    <div class="col-12">
                                        <button class="btn btn-primary w-100 py-3" asp-page-handler="UploadFile" type="submit">Send Message</button>
                                    </div>

                                    @if (Model.successMessage.Length > 0)
                                    {
                                        <div class='alert alert-success alert-dismissible fade show' Tag='alert'>
                                            <strong>@Model.successMessage</strong>
                                            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                                        </div>
                                    }
                                    @if (Model.errorMessage.Length > 0)
                                    {
                                        <div class='alert alert-warning alert-dismissible fade show' Tag='alert'>
                                            <strong>@Model.errorMessage</strong>
                                            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                                        </div>
                                    }

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
