@page "/Tags/Index"
@model Outreach.Areas.Consoles.Pages.Content.Profile.Administrator.Tags.TaglistModel
@{
    ViewData["Title"] = "Tag Manager";
    Layout = "/Areas/Consoles/Pages/Shared/_LayoutProfileLight.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>List of Tag</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">User Profile</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">@*
                        <div class="card-header p-2">
                            <h1>List of Tag</h1>
                        </div><!-- /.card-header -->*@
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <!-- Post -->
                                    <div class="post">
                                        <!-- /.user-block -->
                                        <p>
                                            This is a list of existing tags, if you need to edit the contents do as you wish.
                                        </p>
                                        <ul class="nav nav-pills">
                                            <li class="nav-item"><a class="nav-link active" href="/Tags/Create">Create</a></li>
                                        </ul>
                                        <form asp-action="Delete" method="post" id="Form1" name="Form1">
                                            <table class="table table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <td>Id</td>
                                                        <td>Tag Name</td>
                                                        <td></td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var Tag in Model.Tags)
                                                    {
                                                        <tr>
                                                            <td>@Tag.Id</td>
                                                            <td>@Tag.TagName</td>
                                                            <td><a href="/Tags/Edit?Tagid=@Tag.Id&Tagname=@Tag.TagName" class="btn btn-primary" style="width:auto">Edit</a></td>
                                                            <td>
                                                                <button type="button" class="btn btn-sm btn-danger" onclick="ConfirmDelete(@Tag.Id);">Delete</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>

                                            <input type="text" class="form-control" name="DeleteTagid" id="DeleteTagid" value="" hidden="hidden">
                                        </form>

                                        
                                    </div>
                                    <!-- /.post -->
                                    
                                </div>
                                
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<script>
    function ConfirmDelete(id) {
        if (confirm("Are you sure you want to delete?")) {
            //alert(id); 
            document.getElementById("DeleteTagid").value = id;
            //alert(document.getElementById("DeleteTagid").value);
            document.Form1.submit();
             
        }
        else {
            //alert("false");
            return false;
        }
    }
</script>

