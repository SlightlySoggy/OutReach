@page "/Role/Index"
@model Outreach.Areas.Consoles.Pages.Content.Profile.Administrator.Role.IndexModel
@{
    ViewData["Title"] = "Role Manager";
    Layout = "/Areas/Consoles/Pages/Shared/_LayoutProfileLight.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>List of Roles</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-page="/HomePages/index">Home</a></li>
                        <li class="breadcrumb-item active">List of Roles</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        @*
                        <div class="card-header p-2">
                        <h1>List of Tag</h1>
                        </div><!-- /.card-header -->*@
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <!-- Post -->
                                    <div class="post">
                                        <!-- /.user-block -->
                                        <p>
                                            This is a list of existing roles, if you need to edit the contents do as you wish.
                                        </p>
                                        <ul class="nav nav-pills">
                                            <li class="nav-item"><a class="nav-link active" href="/Role/Create">Create</a></li>
                                        </ul>
                                        <form asp-action="Delete" method="post" id="Form1" name="Form1">
                                            <table class="table table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <td>Id</td>
                                                        <td>Role Name</td>
                                                        <td></td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var role in Model.roles)
                                                    {
                                                        <tr>
                                                            <td>@role.Id</td>
                                                            <td>@role.Name</td>
                                                            <td><a href="/Role/Edit?roleid=@role.Id&rolename=@role.Name" class="btn btn-primary" style="width:auto">Edit</a></td>
                                                            <td><a class="nav-link active" href="/Role/UserInRole?roleid=@role.Id" role="button">User In Role</a></td>

                                                            <td>
                                                                <button type="button" class="btn btn-sm btn-danger" onclick="ConfirmDelete('@role.Id');">Delete</button>
                                                            </td>
                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>

                                            <input type="text" class="form-control" name="DeleteRoleid" id="DeleteRoleid" value="" hidden="hidden">

                                        </form>


                                    </div>
                                    <!-- /.post -->

                                </div>

                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



<script>
    function ConfirmDelete(id) {
        if (confirm("Are you sure you want to delete?")) {
            //alert(id);
            document.getElementById("DeleteRoleid").value = id;
            //alert(document.getElementById("DeleteTagid").value);
            document.Form1.submit();

        }
        else {
            //alert("false");
            return false;
        }
    }
</script>




