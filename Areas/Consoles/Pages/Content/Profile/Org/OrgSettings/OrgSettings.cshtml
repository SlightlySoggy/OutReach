@page "/OrgSettings"
@model Outreach.Areas.Identity.Pages.RegisterOrg.OrganizationSettingsModel
@{
    Layout = "/Areas/Consoles/Pages/Shared/_LayoutProfileLight.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Register Organization</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Register Organization</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"></h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 order-1 order-md-2">
                        <h3 class="text-primary text-center"><i class="fas fa-paint-brush"></i> Outreach v3</h3>
                        <p class="text-muted text-center">
                            This feature is still in developement, please report any bugs you find using our contact page!

                            If there are persistent issues contact Maxwell Li directly
                        </p>


                        <div class="text-center mt-5 mb-3">
                            <a href="#" class="btn btn-sm btn-primary">Report Bug</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <card>
                <div class="row d-flex justify-content-center">
                    <div class="col-10">

                        <div class="card-body p-5">

                            <!-- Pills content -->
                            <div class="tab-content">
                                <div class="tab-pane fade show active">
                                    <form id="account" method="post">

                                        <div class="mb-3">
                                            <h6>Organization Name:</h6>
                                            <input type="text" class="form-control" placeholder="" name="inputName" value="@Model.orgInfo.Name">
                                        </div>
                                        <br />

                                        <div class="mb-3">
                                            <h6>Primary Email:</h6>
                                            <input type="text" class="form-control" placeholder="We will contact this email to verify account registration" name="inputEmail" value="@Model.orgInfo.Email">
                                        </div>
                                        <br />

                                        <div class="mb-3">
                                            <h6>Organization Description:</h6>
                                            <textarea id="inputDescription" class="form-control" rows="4" name="inputDescription" placeholder="Tell us a bit about your organization...">@Model.orgInfo.Description</textarea>
                                            <p>This is what people will see when viewing your organization profile. You can always change this later!</p>
                                        </div>
                                        <br />

                                        <div class="justify-content-center">
                                            <div class="g-recaptcha" data-sitekey="6Le8jJojAAAAAE6DrIJcVv0H5htZ3S_CKBwBMmSX"></div>
                                        </div>
                                        <br />


                                        <input type="hidden" class="form-control" placeholder="" name="hid_CurrentOrgid" value="@Model.orgInfo.Id">
                                        <input type="hidden" class="form-control" placeholder="" name="hid_userId" value="@Model.orgInfo.CreatedUserId">

                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </card>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
