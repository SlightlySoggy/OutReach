@page "/Dashboardorg"
@model Outreach.Areas.Consoles.Pages.Content.Profile.Org.Dashboard.DashboardorgModel
@{
    Layout = "/Areas/Consoles/Pages/Shared/_LayoutProfileLight.cshtml";
}

<!-- Ekko Lightbox -->
<link rel="stylesheet" href="../plugins/ekko-lightbox/ekko-lightbox.css">
<!-- overlayScrollbars -->
<link rel="stylesheet" href="../plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-dark">
    <!-- Left navbar links -->

    <ul class="navbar-nav">
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" asp-area="Consoles" asp-page="/Content/Profile/Organization/organizationsDetails/organizationdetails">Overview</a>
        </li>
        @*<li class="nav-item d-none d-sm-inline-block">
        <a class="nav-link" asp-area="Consoles" asp-page="/Content/Tools/Scheduling/Todo/Todo">Todo</a>
        </li>*@

        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" asp-area="Consoles" asp-page="/Content/Tools/Scheduling/KanBan/KanBanLight">Board</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" asp-area="Consoles" asp-page="/Content/Tools/Scheduling/Calendar/Calendarlight">Calendar</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block active">
            <a class="nav-link" asp-area="Consoles" asp-page="/Content/Profile/Organization/Dashboard/Dashboardorg">Dashboard</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block active">
            <a class="nav-link" asp-area="Consoles" asp-page="/Content/Profile/Organization/OrganizationSettings/OrganizationSettings">Settings</a>
        </li>
    </ul>
</nav>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"></h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-12 col-lg-12 order-1 order-md-2">
                        <h3 class="text-primary text-center"><i class="fas fa-paint-brush"></i> Outreach v3</h3>
                        <p class="text-muted text-center">
                            This feature is still in developement, please report any bugs you find using our contact page!

                            If there are persistent issues contact Maxwell Li directly
                        </p>


                        <div class="text-center mt-5 mb-3">
                            <a href="#" class="btn btn-sm btn-primary">Report Bug</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <card>
                <div class="row d-flex justify-content-center">
                    <div class="col-10">

                        <div class="card-body p-5">

                            <!-- Pills content -->
                            <div class="tab-content">
                                <div class="tab-pane fade show active">
                                    <form id="account" method="post">

                                        <div class="mb-3">
                                            <h6>Organization Name:</h6>
                                            <input type="text" class="form-control" placeholder="" name="opptitle" value="">
                                        </div>
                                        <br />

                                        <div class="mb-3">
                                            <h6>Primary Email:</h6>
                                            <input type="text" class="form-control" placeholder="We will contact this email to verify account registration" name="opptitle" value="">
                                        </div>
                                        <br />

                                        <div class="mb-3">
                                            <h6>Organization Description:</h6>
                                            <textarea class="form-control" rows="5" placeholder="Tell us a bit about your organization..." name="oppdesc"></textarea>
                                            <p>This is what people will see when viewing your organization profile. You can always change this later!</p>
                                        </div>
                                        <br />

                                        <div class="justify-content-center">
                                            <div class="g-recaptcha" data-sitekey="6Le8jJojAAAAAE6DrIJcVv0H5htZ3S_CKBwBMmSX"></div>
                                        </div>
                                        <br />

                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </card>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->