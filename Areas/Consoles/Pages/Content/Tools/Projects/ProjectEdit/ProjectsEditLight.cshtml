@page "/ProjectsEditLight"
@model Outreach.Areas.Consoles.Pages.Content.Tools.Projects.ProjectEdit.ProjectsEditLightModel
@{
    Layout = "/Areas/Consoles/Pages/Shared/_LayoutProfileLight.cshtml";
}
 

<form method="post">

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Project Create/Edit</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Project Add</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-6">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">General</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label for="inputName">Project Name</label>
                            <input type="text" id="inputName" class="form-control" placeholder="Enter the Project name..." name="inputName" value="@Model.projectInfo.ProjectName">
              </div>
              <div class="form-group">
                <label for="inputDescription">Project Description</label>
                            <textarea id="inputDescription" class="form-control" rows="4" name="inputDescription" placeholder="Enter the description...">@Model.projectInfo.Description</textarea>
              </div>
@*              <div class="form-group">
                <label for="inputStatus">Status</label>
                <select id="inputStatus" class="form-control custom-select">
                  <option selected disabled>Select one</option>
                  <option>On Hold</option>
                  <option>Canceled</option>
                  <option>Success</option>
                </select>
              </div>*@

                        <div class="form-group">
                            <label for="inputStartDate">Project Start Date</label>
                            <input type="text" id="inputStartDate" class="form-control" placeholder="" name="inputStartDate" value="@Model.projectInfo.StartDate">
                        </div>

                        <div class="form-group">
                            <label for="inputDueDate">Project Due Date</label>
                            <input type="text" id="inputDueDate" class="form-control" placeholder="" name="inputDueDate" value="@Model.projectInfo.DueDate">
                        </div>

                        <div class="form-group">
                            <label for="inputCompletionDate">Project Completion Date</label>
                            <input type="text" id="inputCompletionDate" class="form-control" placeholder="" name="inputCompletionDate" value="@Model.projectInfo.CompletionDate">
                        </div>
              <div class="form-group">
                <label for="inputClientCompany">Client Company</label>
                <input type="text" id="inputClientCompany" class="form-control">
              </div>
              <div class="form-group">
                <label for="inputProjectLeader">Project Leader</label>
                <input type="text" id="inputProjectLeader" class="form-control">
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <div class="col-md-6">
          <div class="card card-secondary">
            <div class="card-header">
              <h3 class="card-title">Budget</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label for="inputEstimatedBudget">Estimated budget</label>
                            <input type="number" id="inputEstimatedBudget" class="form-control" placeholder="Enter the budget $..." name="inputEstimatedBudget" value="@Model.projectInfo.EstimatedBudget">
              </div>
              <div class="form-group">
                <label for="inputSpentBudget">Total amount spent</label>
                            <input type="number" id="inputSpentBudget" class="form-control" name="inputSpentBudget" value="@Model.projectInfo.ActualSpent">
              </div>
              <div class="form-group">
                <label for="inputEstimatedDuration">Estimated duration by days</label>
                            <input type="number" id="inputEstimatedDuration" class="form-control" name="inputEstimatedDuration" value="@Model.projectInfo.DurationByDay">
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <a href="#" class="btn btn-secondary">Cancel</a>
          <input type="submit" value="Save" class="btn btn-success float-right">

                    <input type="hidden" class="form-control" placeholder="" name="hid_oppId" value="@Model.projectInfo.Id">
                    <input type="hidden" class="form-control" placeholder="" name="hid_orgid" value="@Model.projectInfo.CreatedOrgId">
                    <input type="hidden" class="form-control" placeholder="" name="hid_userId" value="@Model.projectInfo.CreatedUserId">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

          
<!-- Job Detail End -->             
</form>
